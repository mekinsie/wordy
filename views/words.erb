<h3>Your Words:</h3>

<% if @word_list.any? %>
  <ul>
    <% @word_list.each do |word| %>
      <li><a href="/words/<%= word.id %>"><%= word.word %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no words to display.</p>
<% end %><br>

<div class="container">
  <a href="/words/new">Add a new word</a><br>
</div>
